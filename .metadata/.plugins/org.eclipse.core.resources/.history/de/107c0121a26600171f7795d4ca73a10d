//package finaldbproject;
import java.io.*;
import java.util.Vector;

import org.bson.Document;
import org.bson.conversions.Bson;

public class Message implements Serializable {

    static final int SEARCH = 0, LOGIN = 1, LOGOUT = 2, REGISTER = 3,SUGNUP = 4,ASK=5,SHOWALL=6,SEARCH2=7,SHOWFAV=8
    		,QUESTIONTOANSWER=9,ANSWER=10,DELETE=11,SHOWTAG=12,SHOWTHISTAG=13,RATE=14,RATE1=15,OPINIONANS=16,RATEANS=17
    		,ANSWEREDIT1=18,ANSWEREDIT=19,DELETEA=20,UPDATEPRO=21,DELQUESTION=22,UPQUESTION=23;
    private int type;
    //public String messages;
    private Document info,user,qu,opinion;
    private boolean islogin;
    private String q;
    int qid;
    Document rate;
	private Document answer;
	private int aid;
	private boolean isquistioner;
	private boolean qadded;
	private Vector<Document> related;

    // constructor

    Message(int type, Document info) {
        this.type = type;
        this.info = info;
    }
    Message(int type,boolean qadded,Vector<Document> related){//ask
    	this.type = type;
    	this.qadded = qadded;
    	this.related = related;
    	
    }
    Message(int type) {
        this.type = type;
    }
    Message(int type, boolean islogin, Document user) {
        this.type = type;
        this.islogin = islogin;
        this.user = user;
    }
    Message(int type, String q) {
        this.type = type;
        this.q = q;
    }
    Message(int type,Document  qu, boolean isquistioner) {
        this.type = type;
        this.isquistioner = isquistioner;
        this.qu = qu;
    }
    Message(int type,Document  qu,Document user, boolean isquistioner) {//for update answer1
        this.type = type;
        this.isquistioner = isquistioner;
        this.qu = qu;
        this.user = user;
    }
    Message(int type, String q,Document user) {
        this.type = type;
        this.q = q;
        this.user = user;
    }
    Message(int type, Document  qu,Document user) { //and pro update
        this.type = type;
        this.qu = qu;
        this.user = user;
    }
    Message(int type, int qid,Document answer ) {
        this.type = type;
        this.answer = answer;
        this.qid = qid;
    }
    Message(int type, Document qu,Document answer ,Document rate) {
        this.type = type;
        this.answer = answer;
        this.qu = qu;
        this.rate=rate;
    }
    Message(int type, Document qu,int aid ) {//for rate and delete ans
        this.type = type;
        this.qu = qu;
        this.aid = aid;        
    }
    
    Message(int type, Document qu,int aid,Document updateanswer  ) {//for answer edit
        this.type = type;
        this.qu = qu;
        this.aid = aid;        
        this.answer = updateanswer;
    }
    
    Message(int type,Document user,Document  qu,Document ans,Document opinion) {
        System.out.println(opinion.toJson());
        this.type = type;
        this.qu = qu;
        this.user = user;
        this.answer=ans;
        this.opinion=opinion;
    } 
    // getters
    int getType() {
        return type;
    }
    int getQid() {
        return qid;
    }
    int getAid() {
        return aid;
    }
    boolean qadded(){
    	return qadded;
    }
    Vector<Document> getrelated(){
    	return related;
    }
    Document getRate() {
        return rate;
    }
    Document getInfo() {
        return info;
    }
    Document getanswer() {
        return answer;
    }
    Document getUser() {
        return user;
    }
    Document getqu() {
        return qu;
    }
    Document getopinion() {
        return opinion;
    }
    boolean getIslogin() {
        return islogin;
    }
    boolean getIsQuistioner() {
        return isquistioner;
    }
    String getquestion(){
    	return q;
    }
}

